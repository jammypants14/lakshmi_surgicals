  <template id="report_pro_forma_invoic_inherit_zb_lakshmi_surgicals" inherit_id="sale.report_saleorder_document">
			<xpath expr="//t[@t-call='web.external_layout']" position="attributes">
				<attribute name="t-call">zb_lakshmi_customizations.external_layout_custom_po_kerala</attribute>
			</xpath>
			<xpath expr="//th[@name='th_quantity']" position="after">
				 <t t-if="doc.show_mrp">
				 	<th name="th_mrp" class="text-end text-nowrap">MRP</th>
				 </t>
			</xpath>
			<xpath expr="//td[@name='td_quantity']" position="after">
				 <t t-if="doc.show_mrp">
					 <td name="td_mrp" class="text-end">
					    <span t-field="line.product_id.list_price" />
					</td>
				</t>
			</xpath>
			<xpath expr="//div[@class='page']" position="inside">
				<br />
				<div class="col-12">
				  <div class="row">
				    <div class="col-6 text-start">
				      <p>Thanking you</p>
				      <img t-if="doc.company_id.signature" class="o_company_logo_small" 
				           t-att-src="image_data_uri(doc.company_id.signature)" 
				           alt="Signature" 
				           style="max-height: 100px; max-width: 100px;"/>
				      <p>Very truly yours,<br/>
				      For LAKSHMI SURGICALS</p>
				    </div>
				    <div class="col-6 text-start">  
				      <img t-if="doc.company_id.company_seal" class="o_company_logo_small" 
				           t-att-src="image_data_uri(doc.company_id.company_seal)" 
				           alt="Seal" 
				           style="max-height: 100px; max-width: 100px;"/>
				    </div>
				  </div>
				</div>
			</xpath>
  </template>

  
